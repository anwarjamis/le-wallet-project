<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-devise">
        <br>
        <h2>Categorías</h2>
        <% @categories.each do |category| %>
          <div class="d-flex justify-content-between align-items-start">
            <ul><h4><%= category.name %></h4></ul>
            <%= link_to "Borrar categoría",
                  category_path(category),
                  method: :delete,
                  class: "text-danger",
                  data: { confirm: "¿Estás seguro de que quieres eliminar esta categoría?" } %>
          </div>
          <ul><%= link_to "Editar categoría", edit_category_path(category), class: "nav-link btn-ctgy btn-edit" %></ul>
        <% end %>
        <br>
        <%= link_to "Crear nueva categoría", new_category_path, class: "nav-link btn-ctgy" %>
        <%= link_to "Volver", :back, class: "btn btn-gradient" %>
      </div>
    </div>
  </div>
</div>
