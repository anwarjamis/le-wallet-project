<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                   <%= cl_image_tag current_user.photo.key, alt:"Admin", class:"rounded-circle", width:"120"%>
                    <!--<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">-->
                    <div class="mt-3">
                      <h4><%= current_user.name %></h4>
                      <p class="text-secondary mb-1"><%= current_user.email %></p>
                      <p class="text-muted font-size-sm"><%= current_user.rut %></p>
                      <%= link_to "Volver", :back, class: "btn btn-gradient" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Nombre</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= current_user.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= current_user.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">RUT</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= current_user.rut %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <%= link_to "Editar informaciÃ³n", edit_user_registration_path(current_user)%>
                    </div>
                  </div>
                </div>
              </div>

                <div class="col-sm-12 mb-3">
                  <div class="card h-100">
                    <div class="card-body category-card">
                      <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Categorias</h6>
                      <% @user.categories.each do |category| %>

                      <small><%= category.name %></small>
                      <div class="progress mb-3" style="height: 1px">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
</div>
